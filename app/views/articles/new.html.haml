.panel.panel-default
  .panel-heading
    %h3.panel-title
      New Article
  .panel-body
    =form_for @article do |f|
      .form-group
        =f.label :title
        =f.text_field :title, class: "form-control", placeholder: "Title of the article", autofocus: true
      .form-group
        =f.label :body
        =f.text_area :body, rows: 10, class: "form-control", placeholder: "Body of the article"
      .form-group
        %br/
        =f.submit "Create Article", class: "btn btn-primary btn-block"
